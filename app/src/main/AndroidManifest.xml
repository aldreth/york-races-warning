<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.me.peteharris.pintinyork" >

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uk.me.peteharris.pintinyork.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="uk.me.peteharris.pintinyork.GoOutWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/go_out_widget_info" />
        </receiver>

        <activity
            android:name="uk.me.peteharris.pintinyork.RaceDays"
            android:parentActivityName=".MainActivity"
            android:label="@string/title_activity_race_days" >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <receiver android:name=".RaceDayNotificationReceiver$OnBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".RaceDayNotificationReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="uk.me.peteharris.pintinyork.action.RACEDAY_ALERT"  />
            </intent-filter>
        </receiver>
    </application>

</manifest>
